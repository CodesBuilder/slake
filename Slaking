@version 100;

var CC="clang";
var LD="lld -flavor gnu";

var CP=?;
var MKDIR=?;
var RM=?;

function constructor() {
	switch(__OS__) {
		case "WINNT" {
			CP="copy";
			MKDIR="mkdir";
			RM="del";
		}
		case "UNIXLIKE" {
			CP="cp";
			MKDIR="mkdir";
			RM="rm";
		}
		default {
			%error "Incompatible OS type.";
			%abort -1;
		}
	}
}

